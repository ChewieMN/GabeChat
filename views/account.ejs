<%- include('partials/header'); %>
<div id="main">
    <div class="container-fluid">
        <div class="row">
            <div class="userInfo col-md-2">
                <h1>My Account</h1>
                <!--Shows avatar photo if present-->
                <% if (locals.user.photoURL) { %>   
                    <p class="avatar">
                        <img src="<%= locals.user.photoURL %>" alt="Avatar Image" class="avatar-image">
                    </p>
                <% } %>
                <h2><%= locals.user.displayName %></h2>
            </div>
            <div class="accountForm col-md-5">
                <form action="/account" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="email">Update Email Address</label>
                        <input name="email" type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" value="<%= locals.user.email %>">
                    </div>
                    <div class="form-group">
                        <label for="displayName">Update Username</label>
                        <input name="displayName" type="text" class="form-control" id="inputUsername" value="<%= locals.user.displayName %>">
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Password:</label>
                        <input type="password" name="password" class="form-control" id="inputPassword">
                    </div>
                    <div class="form-group">
                        <label for="insertPasswordConfirm">Confirm Password:</label>
                        <input type="password" name="passwordConfirm" class="form-control" id="inputPassword">
                    </div>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" name="avatar" class="custom-file-input" id="inputGroupFile01"
                            aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark accountButton">Save Changes</button>
                </form>
                <div class="accountErrors">
                    <% if (locals.errors) { %>
                    <% if(locals.errors.profile) { %>
                        <% locals.errors.profile.forEach(function(error) { %>
                        <p class="alert bg-white text-dark" role="alert"><%= error %></p>
                        <% }) %>
                    <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer'); %>