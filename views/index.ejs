<%- include('partials/styleOnlyHeader'); %>
<div id="main">
  <div class="container-fluid">
    <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4" id="login">
            <h1 class="loginTitle">GabeChat</h1>
            <div class="loginForm">
              <form action="/login" method="post">
                <div class="form-group">
                  <label for="inputEmail">Email:</label>
                  <input type="email" name="email" class="form-control" id="inputEmail">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password:</label>
                  <input type="password" class="form-control" name="password" id="inputPassword">
                </div>
                <button type="submit" class="btn text-white btn-block text-left bg-dark">Sign in</button>
              </form>
            </div>
            <div class="loginLinks">
              <a>Forgot password?</a>
              <br>
              <a href="/sign-up">Sign up</a>
            </div>
            <div class="loginErrors">
              <% if (locals.errors) { %>
                <% if(locals.errors.login) { %>
                  <% locals.errors.login.forEach(function(error) { %>
                    <p class="alert bg-dark text-white" role="alert"><%= error %></p>
                  <% }) %>
                <% } %>
              <% } %>
            </div>
          </div>
          <div class="col-md-4"></div>
    </div> <!-- end .row --> 
  </div><!-- end .container-fluid -->
</div><!-- end #main -->
<%- include('partials/footer'); %>